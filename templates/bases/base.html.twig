<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}!{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/images/logo.png') }}">
    <link rel="stylesheet" href="{{ asset('assets/sources/css/style.css') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body>
<nav class="navigation">
    <button class="mobile_menu">
        <i data-feather="menu"></i>
    </button>
    <h1 class="logo">
        <img src="{{ asset('assets/images/logo.png') }}" alt="AS ORTF PlongÃ©e">
    </h1>
    <ul class="navigation_links">
        <li class="link"><a href="#">Notre association</a></li>
        <li class="link"><a href="#">Nos articles</a></li>
        <li class="link"><a href="#">Notre calendrier</a></li>
        <li class="link login">
            <a href="{{ path('app_login') }}">
                Connexion
            </a>
        </li>
        <li class="mobile_menu mobile_menu_close">
            <i data-feather="x"></i>
        </li>
    </ul>
</nav>

{% block body %}{% endblock %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    feather.replace();

    $('.mobile_menu').on('click', ()=> {
        $('.navigation_links').addClass('open');
    })

    $('.mobile_menu_close').on('click', ()=> {
        $('.navigation_links').removeClass('open');
    })


    $('.tablinks').on('click', (e)=> {
        const clicked = $(e.currentTarget);
        const tabToDisplay = clicked.data('display');
        $('.tabcontent').removeClass('active')
        $('.tablinks').removeClass('active')
        $(clicked).addClass('active')
        $(`#${tabToDisplay}`).addClass('active')
    })
</script>
{% block javascripts %}{% endblock %}

</body>
</html>
